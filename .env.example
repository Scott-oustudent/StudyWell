# Frontend (Vite)
VITE_SUPABASE_URL=https://your-supabase-url.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Enable using Supabase remote DB in runtime (set to 'true' to enable)
VITE_ENABLE_SUPABASE=false

# Server (PayPal)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
PAYPAL_BASE=https://api-m.sandbox.paypal.com

# Frontend PayPal (optional - used by SDK loader if you want client-side key)
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# Price validation for server-side checks
SUBSCRIPTION_PRICE=9.99
SUBSCRIPTION_CURRENCY=GBP

# Email (SMTP) settings for sending confirmation emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=no-reply@yourdomain.com

# Base URL used when constructing confirmation links
APP_BASE_URL=http://localhost:3000

# Server-side Supabase (optional but required for persistence)
# When set, the server will persist payments and email confirmations into Supabase.
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# Required tables (suggested schema)
# users: (email PK, username, password (hashed), institution, role, subscription json)
# payments: (order_id, user_email, amount, currency, capture_response json, created_at)
# email_confirmations: (token PK, email, username, password_hash, institution, expires_at)
